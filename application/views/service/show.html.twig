{% extends "layout.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <section class="wrapper">
        <section class="page_head">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="page_title">
                            <h2>{{ data.title }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                        <div class="blog_single">
                            <article class="post">
                                <div class="post_content">
                                    {{ data.text|raw }}
                                </div>
                                {% include 'blocks/social_share.html.twig' with {'entity': 'service'} %}
                            </article>
                            <div class="widget_title">
                                <h4><span>Отзывы</span></h4>
                            </div>
                            {% for review in reviewList %}
                                <div class="about_author">
                                    <div class="author_desc">
                                        <img src="{{ base_url() }}img/reviews/{{ review.image }}" alt="about author">
                                    </div>
                                    <div class="author_bio">
                                        <h3 class="author_name">
                                            {{ review.author }}
                                        </h3>
                                        <p class="author_det">
                                            {{ review.text[:200]|raw }}
                                            <span class="show-more" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ review.text }}"> ...<i class="fa fa-search-plus"></i></span>
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-4 col-lg-4 col-sm-4">
                        <div class="sidebar">
                            <div class="widget widget_categories">
                                <div class="widget_title">
                                    <h4><span>Услуги</span></h4>
                                </div>
                                <ul class="list_style service-list">
                                    {% for service in serviceList %}
                                        <li class="{{ service.color_class }} {{ service.icon_class }}">
                                            <a href="{{ base_url() }}service/{{ service.id }}/{{ service.slug }}">
                                                {{ service.title }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                            {% if saleProductList %}
                                <div class="list_style service-list">
                                    <div class="widget_title">
                                        <h4><span>Заказать</span></h4>
                                    </div>
                                </div>

                                <div class="widget">
                                    <ul class="list_style circle">
                                        {% for saleProduct in saleProductList %}
                                            <li>
                                                <a href="{{ base_url() }}shop/sale/{{ saleProduct.id }}/{{ saleProduct.slug }}">
                                                    {{ saleProduct.title }}
                                                    {% if saleProduct.label|length %}
                                                        ({{ saleProduct.label }})
                                                    {% endif %}
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}

                            <div class="widget widget_about">
                                <div class="widget_title">
                                    <h4><span>Статьи</span></h4>
                                </div>
                            </div>

                            <div class="widget">
                                <ul class="recent_tab_list">
                                    {% for article in articleList %}
                                        <li>
                                            <span>
                                                <a href="{{ base_url() }}articles/{{ article.id }}">
                                                    <img src="{{ base_url() }}img/blog/{{ article.image }}" alt="" />
                                                </a>
                                            </span>
                                            <a href="{{ base_url() }}articles/{{ article.id }}">
                                                {{ article.title }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
{% endblock %}

{% block gift %}
    {{ parent() }}
{% endblock %}

{% block footer %}
    {{ parent() }}
    <script type="text/javascript">
        $('[data-toggle="popover"]').popover({
            placement : 'top',
            trigger : 'hover'
        });
    </script>
{% endblock %}