{% extends "layout.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <section class="wrapper">
        <section class="page_head">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="page_title">
                            <h2>{{ pageTitle }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="content service">
            <div class="container">
                {% for saleCategory in saleCategoryList %}
                    <div class="row sub_content">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="dividerHeading">
                                <h4><span>{{ saleCategory.data.name }}</span></h4>
                            </div>
                        </div>
                        <div class="mrgb-50 clearfix"></div>
                        <div class="pricingBlock theme-color-pt">
                            {% for product in saleCategory.productList %}
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <div class="pricingTable">
                                        <div class="pricingTable-header">
                                            <img src="{{ base_url() }}img/sale_products/{{ product.thumb }}"/>
                                            <span class="heading">{{ product.title }}</span>
                                            <span class="price-value">UAH<span>{{ product.price }}</span></span>
                                        </div>

                                        <div class="pricingContent">
                                            {{ product.description|raw }}
                                            {#<ul>#}
                                                {#<li><strong>50GB</strong> Disk Space</li>#}
                                                {#<li><strong>50</strong> Email Accounts</li>#}
                                                {#<li><strong>50GB</strong> Monthly Bandwidth</li>#}
                                                {#<li><strong>50</strong> Domains</li>#}
                                                {#<li><strong>Unlimited</strong> Subdomains</li>#}
                                            {#</ul>#}
                                        </div>

                                        <div class="pricingTable-sign-up">
                                            <a href="{{ base_url() }}shop/sale/{{ product.salePageId }}/{{ product.salePageSlug }}" class="btn btn-block btn-default">ЗАКАЗАТЬ</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </section>
{% endblock %}

{% block gift %}
    {{ parent() }}
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}