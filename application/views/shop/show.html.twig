{% extends "layout.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <section class="wrapper">
        <section class="page_head">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="page_title">
                            <h2>{{ data.data.title }} {{ data.data.label }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="content blog">
            <div class="container">
                <div class="row">
                    {#<div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">#}
                        <div class="blog_single">
                            <article class="post">
                                <div class="">
                                    {{ data.data.text1|raw }}
                                </div>
                            </article>
                        </div>
                        <div class="row sub_content">
                            <div class="pricingBlock theme-color-pt">
                                {% for product in data.productList %}
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="pricingTable">
                                            <div class="pricingTable-header">
                                                <img src="{{ base_url() }}img/sale_products/{{ product.image }}"/>
                                                <span class="heading">
                                                    {{ product.title }}
                                                    {% if product.label|length %}
                                                        <br/>{{ product.label }}
                                                    {% endif %}
                                                </span>
                                                <span class="price-value">UAH<span>{{ product.price }}</span></span>
                                            </div>

                                            <div class="pricingContent">
                                                {{ product.description|raw }}
                                                {% if product.gift|length %}
                                                    <i class="fa fa-gift price"></i> {{ product.gift|raw }}
                                                {% endif %}
                                            </div>

                                            <div class="pricingTable-sign-up">
                                                <a href="#" class="btn btn-block btn-default">ЗАКАЗАТЬ</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="blog_single">
                            <article class="post">
                                <div class="">
                                    {{ data.data.text2|raw }}
                                </div>
                            </article>
                        </div>
                        <div class="blog_single">
                            <div class="widget_title">
                                <h4><span>Отзывы</span></h4>
                            </div>
                            {% for review in reviewList %}
                                <div class="about_author">
                                    <div class="author_desc">
                                        <img src="{{ base_url() }}img/reviews/{{ review.image }}" alt="about author">
                                    </div>
                                    <div class="author_bio">
                                        <h3 class="author_name">
                                            {{ review.author }}
                                        </h3>
                                        <p class="author_det shorten-review">
                                            {{ review.text }}
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {#</div>#}
                </div>
            </div>
        </section>
    </section>
{% endblock %}

{% block gift %}
    {{ parent() }}
{% endblock %}

{% block footer %}
    {{ parent() }}
    <script type="text/javascript">
        $('.shorten-review').shorten({
            showChars: 350,
            moreText: '<i class="fa fa-angle-down"></i>',
            lessText: '<i class="fa fa-angle-up"></i>'
        });
    </script>
{% endblock %}