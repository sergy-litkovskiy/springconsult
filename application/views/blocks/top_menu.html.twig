<div class="col-lg-9 col-sm-9">
    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                {% set currentItemId = currentMenuId is defined ? currentMenuId : topLevelMenuList[0].id %}
                {% for topLevelMenu in topLevelMenuList %}
                    <li {% if currentItemId == topLevelMenu.id %}class="active"{% endif %}>
                        <a href="{{ base_url() }}show/{{ topLevelMenu.id }}">{{ topLevelMenu.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>